<Page
    x:Class="Pi_BasketIoT.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pi_BasketIoT"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFFDA133"/>
                <GradientStop Color="#FFFB63A8" Offset="0.5"/>
                <GradientStop Color="#FFF33740" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock Margin="0,38,0,0" TextWrapping="Wrap" Foreground="#FFFBFBFB" TextAlignment="Center" Height="22" VerticalAlignment="Top">
        	<Run FontWeight="Bold" Text="Basket ID:"/>
        </TextBlock>
        <TextBlock x:ConnectionId='1' x:Name="TBID" Margin="0,61,0,81" TextWrapping="Wrap" Foreground="#FFFBFBFB" TextAlignment="Center" d:LayoutOverrides="TopPosition, BottomPosition" FontSize="36">
        	<Run FontWeight="Bold" Text=""/>
        </TextBlock>
        <Button x:ConnectionId='2' x:Name="ButGetID" Content="Get ID" HorizontalAlignment="Stretch" Margin="0,135,0,0" VerticalAlignment="Top" FontWeight="Bold" Background="#FFFFFDFF" FontSize="16" Height="31">
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFDA133" Offset="0"/>
                    <GradientStop Color="#FFFF0C00" Offset="1"/>
                </LinearGradientBrush>
            </Button.Foreground>
        </Button>
        <TextBlock x:ConnectionId='3' x:Name="textBlock" HorizontalAlignment="Left" Margin="10,171,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='4' x:Name="TBBefore" HorizontalAlignment="Left" Margin="15,291,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='5' x:Name="TBAfter" HorizontalAlignment="Left" Margin="15,263,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='6' x:Name="TBScore" HorizontalAlignment="Left" Margin="15,239,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>

    </Grid>
</Page>

